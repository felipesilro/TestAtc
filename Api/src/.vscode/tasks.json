{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "buildApi",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Api.Application/Application.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "buildMvc",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Api.Mvc/Api.Mvc.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}